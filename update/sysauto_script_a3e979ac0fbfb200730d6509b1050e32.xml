        <script><![CDATA[OperaApprover();
function OperaApprover(){
var target = new GlideRecord('x_lohar_opera_conf_config');
target.addQuery('active',true);
target.addQuery('state','=',1);
target.query();

while (target.next()){
		var vlocation = new GlideRecord('u_hotel_interface_mapping');
		vlocation.addQuery('u_location', target.u_location);
		vlocation.query();
		if (vlocation.next()) {
			target.u_property_approvers = vlocation.u_executive_group;
		}
	target.state = 2;
	target.update();
}
}]]></script>
